{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist/public",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "SESSION_SECRET": "@session_secret"
  },
  "installCommand": "npm install"
}
